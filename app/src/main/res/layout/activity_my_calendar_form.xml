<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearlayout"
    tools:context=".FormActivity">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:background="@color/colorAccent"

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:title="Home"
        />
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <Zastra.GSTIT.Utils.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/white"
                android:text="@string/save_event"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Zastra.GSTIT.Utils.CustomTextViewNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:padding="10dp"

                    />
                <EditText
                    android:id="@+id/etSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter event name"
                    android:singleLine="true"
                    android:background="@drawable/background_shape"
                    android:layout_margin="10dp"
                    >

                </EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Zastra.GSTIT.Utils.CustomTextViewNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Date"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:padding="10dp"

                    />
                <Zastra.GSTIT.Utils.CustomTextViewNormal
                    android:id="@+id/tvStartEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select start event"
                    android:background="@drawable/background_shape"
                    android:layout_margin="10dp"
                    >

                </Zastra.GSTIT.Utils.CustomTextViewNormal>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Zastra.GSTIT.Utils.CustomTextViewNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:padding="10dp"

                    />
                <EditText
                    android:id="@+id/etDescrption"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/background_shape"
                    android:layout_margin="10dp"
                    android:hint="Description"
                    >

                </EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Zastra.GSTIT.Utils.CustomTextViewNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Theme Color"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:padding="10dp"

                    />

                <Zastra.GSTIT.Utils.CustomTextViewNormal
                    android:id="@+id/tvThemeColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select theme color"
                    android:background="@drawable/background_shape"
                    android:layout_margin="10dp"
                    >

                </Zastra.GSTIT.Utils.CustomTextViewNormal>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_shape"
                    android:text="save"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnClose"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_shape"
                    android:text="Close"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    >

                </androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>



</androidx.appcompat.widget.LinearLayoutCompat>