<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="Zastra.GSTIT">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/madhusudhan_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/madhusudhan_logo"
        android:supportsRtl="true"
        android:taskAffinity=".string"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        <activity android:name="Zastra.GSTIT.Calendar.MyCalendarFormActivity"></activity>

        <activity android:name="Zastra.GSTIT.SettingsMenu.AbbreviationsActivity" />
        <activity android:name="Zastra.GSTIT.Notification.NotificationActivity" />
        <!--        android:networkSecurityConfig="@xml/network_security_config"-->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name="Zastra.GSTIT.Form.UserFormActivity" />
        <activity android:name="Zastra.GSTIT.SettingsMenu.HelpActivity" />
        <activity android:name="Zastra.GSTIT.SettingsMenu.TermsAndCondtionsActivity" />
        <activity android:name="Zastra.GSTIT.SettingsMenu.AboutActivity" />
        <activity
            android:name="Zastra.GSTIT.BottomNavigtnActivity"
            android:label="@string/title_activity_bottom_navigtn" />
        <activity android:name="Zastra.GSTIT.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!--
        <service android:name=".Notification.MyMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>-->

        <activity
            android:name="Zastra.GSTIT.FormActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="Zastra.GSTIT.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="Zastra.GSTIT.RegistrationActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>